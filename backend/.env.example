# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password
DATABASE_NAME=hots_pod_db

# Kakao OAuth
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_REDIRECT_URI=http://localhost:8000/oauth/kakao/callback
KAKAO_CLIENT_SECRET=your_kakao_client_secret
VITE_API_BASE_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# JWT Secret Key (MUST be changed in production!)
JWT_SECRET_KEY=your_very_secure_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Emails (comma-separated)
# Users with these Kakao emails will automatically get admin privileges upon login
# Example: ADMIN_EMAILS=admin@kakao.com,manager@gmail.com,ceo@company.com
# Leave empty or remove this line if you don't want any admins
ADMIN_EMAILS=

# LLM & Embedding Models
LOCAL_LLM_MODEL_NAME=K-intelligence/Midm-2.0-Mini-Instruct
EMBEDDING_MODEL_NAME=jhgan/ko-sroberta-multitask

# Vector DB
CHROMA_DB_PATH=./chroma_db_data

# Optional: CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Redis
# REDIS_ENABLED=false
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Feature Flags
FEATURE_RAG_ENABLED=true
FEATURE_RATE_LIMITING=false
